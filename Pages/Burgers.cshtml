@page
@using RazorPages.Models;

@model RazorPages.Pages.BurgerModel
@{
    ViewData["Title"] = "Burger List";
}

<h1>Burger List 🍔</h1>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <label asp-for="NewBurger.Name">Name</label>
        <input type="text" asp-for="NewBurger.Name" class="mr-5">
        <label asp-for="NewBurger.Size">Size</label>
        <select asp-for="NewBurger.Size" asp-items="Html.GetEnumSelectList<PizzaSize>()" class="mr-5"></select>
        <label asp-for="NewBurger.Price"></label>
        <input asp-for="NewBurger.Price" class="mr-5" />
        <label asp-for="NewBurger.IsGlutenFree">Gluten Free</label>
        <input type="checkbox" asp-for="NewBurger.IsGlutenFree" class="mr-5">
        <label asp-for="NewBurger.IsVegan">Vegan</label>
        <input type="checkbox" asp-for="NewBurger.IsVegan" class="mr-5">
        <button class="btn btn-primary">Add</button>
    </div>
</form>
<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Size</th>
            <th scope="col">Gluten Free</th>
            <th scope="col">Vegan</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    @foreach (var burger in Model.burgers)
    {
        <tr>
            <td>@burger.Name</td>
            <td>@($"{burger.Price:C}")</td>
            <td>@burger.Size</td>
            <td>@Model.GlutenFreeText(burger)</td>
            <td>@Model.VeganText(burger)</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@burger.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}